\r\n    // Método que envia o pedido para ser mostrado no modal de detalhes\r\n    viewOrder(order) {\r\n      this.$emit('viewOrder', order); // Emite o evento com o pedido selecionado\r\n    },\r\n    // Método para calcular o valor total de um pedido\r\n    calculateTotal(order) {\r\n      return order.products.reduce((total, item) => {\r\n        // Ajuste para usar o valor unitário do produto\r\n        return total + item.quantity * item.unitPrice; // Considerando preço unitário\r\n      }, 0);\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.table-container {\r\n  margin-top: 20px;\r\n  overflow-x: auto;\r\n}\r\n\r\ntable {\r\n  width: 100%;\r\n  border-collapse: collapse;\r\n}\r\n\r\nth, td {\r\n  padding: 8px 12px;\r\n  text-align: left;\r\n}\r\n\r\nth {\r\n  background-color: #f4f4f4;\r\n}\r\n\r\nbutton {\r\n  background-color: #3498db;\r\n  color: white;\r\n  padding: 5px 10px;\r\n  border: none;\r\n  cursor: pointer;\r\n}\r\n\r\nbutton:hover {\r\n  background-color: #2980b9;\r\n}\r\n</style>"],"mappings":";;AA0BA,SAASA,QAAO,QAAS,MAAM;AAE/B,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,QAAQ,EAAE;IACR,GAAGF,QAAQ,CAAC,CAAC,QAAQ,CAAC,CAAC,CAAE;EAC3B,CAAC;EACDG,OAAO,EAAE;IACP;IACAC,SAASA,CAACC,KAAK,EAAE;MACf,IAAI,CAACC,KAAK,CAAC,WAAW,EAAED,KAAK,CAAC,EAAE;IAClC,CAAC;IACD;IACAE,cAAcA,CAACF,KAAK,EAAE;MACpB,OAAOA,KAAK,CAACG,QAAQ,CAACC,MAAM,CAAC,CAACC,KAAK,EAAEC,IAAI,KAAK;QAC5C;QACA,OAAOD,KAAI,GAAIC,IAAI,CAACC,QAAO,GAAID,IAAI,CAACE,SAAS,EAAE;MACjD,CAAC,EAAE,CAAC,CAAC;IACP;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}